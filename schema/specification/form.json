{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "group": {
                "type": "string"
            },
            "fields": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "label": {
                            "type": "string"
                        },
                        "default": {
                            "anyOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "type": "null"
                                },
                                {
                                    "type": "number"
                                }
                            ]
                        },
                        "key": {
                            "type": "string"
                        },
                        "value": {
                            "anyOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "type": "null"
                                },
                                {
                                    "type": "number"
                                }
                            ]
                        }
                    },
                    "required": ["label", "default", "key", "value"]
                }
            }
        },
        "required": ["group", "fields"]
    }
}