{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "image": {
                "type": "string",
                "format": "uri",
                "pattern": "^(https?|http?)://"
            },
            "text": {
                "type": "string"
            }
        },
        "required": ["image", "text"]
    }
}