{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "preview": {
                "type": "string",
                "format": "uri",
                "pattern": "^(https?|http?)://"
            },
            "title": {
                "type": "string"
            },
            "link": {
                "anyOf": [
                    {
                        "type": "string",
                        "format": "uri",
                        "pattern": "^(https?|http?|null)://"
                    },
                    {
                        "type": "string",
                        "maxLength": 0
                    },
                    {
                        "type": "null"
                    }
                ]
            }
        },
        "required": ["preview", "link", "title"]
    }
}